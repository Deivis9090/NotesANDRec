<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:background="@color/black">

    <TextView
        android:layout_width="348dp"
        android:layout_height="69dp"
        android:layout_marginBottom="150dp"
        android:background="#6C0000"
        android:fontFamily="@font/baloo_tamma"
        android:gravity="center"
        android:paddingTop="12dp"
        android:paddingBottom="12dp"
        android:text=" - Notas y Recordatorios - "
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="24sp"
        android:textStyle="italic"
        android:typeface="serif" />

    <ImageView
        android:id="@+id/Notes"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="50dp"
        android:layout_marginTop="-100dp"
        android:layout_marginBottom="50dp"
        app:layout_constraintTop_toBottomOf="@+id/Titulo"
        app:srcCompat="@drawable/notes"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="49dp"></ImageView>

    <TextView
        android:layout_width="348dp"
        android:layout_height="69dp"
        android:layout_marginBottom="15dp"
        android:fontFamily="@font/baloo_tamma"
        android:gravity="center"
        android:paddingTop="12dp"
        android:paddingBottom="12dp"
        android:text=" Favor de seleccionar una Opcion:  "
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="14sp"
        android:textStyle="italic"
        android:typeface="serif" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">

        <Button
            android:id="@+id/SELNota"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="50dp"
            android:backgroundTint="#6C0000"
            android:fontFamily="@font/baloo_tamma"
            android:text="Nota"
            android:textColor="@color/white"
            android:textStyle="italic" />

        <Button
            android:id="@+id/SELRecordatorio"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="#6C0000"
            android:fontFamily="@font/baloo_tamma"
            android:text="Recordatorio"
            android:textColor="@color/white"
            android:textStyle="italic" />

    </LinearLayout>

    <TextView
        android:layout_width="348dp"
        android:layout_height="69dp"
        android:fontFamily="@font/baloo_tamma"
        android:gravity="center"
        android:paddingTop="12dp"

        android:paddingBottom="12dp"
        android:text=" - by David Esparza 7C -  "
        android:textAlignment="center"
        android:textColor="#606060"
        android:textSize="10sp"
        android:textStyle="italic"
        android:typeface="serif" />

</LinearLayout>